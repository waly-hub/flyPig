
.load-mask {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 999;
	overflow: hidden;
	background: rgba(242,243,244,0.6);
}
.loader {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 100%;
	height: 100%;
}
.loader image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 10rpx;
	background: rgba(0,0,0,.2);
}

